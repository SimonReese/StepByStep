<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.Home">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/constraintLayout"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/saluto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="35dp"
            android:text="Ciao"
            android:fontFamily="@font/poppins_semibold"
            android:textSize="40sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/nome_utente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="utente"
            android:layout_marginTop="35dp"
            app:layout_constraintTop_toTopOf="parent"
            android:fontFamily="@font/poppins_semibold"
            app:layout_constraintStart_toEndOf="@id/saluto"
            android:layout_marginStart="10dp"
            android:textSize="40dp"
            tools:layout_editor_absoluteX="127dp"
            tools:layout_editor_absoluteY="66dp" />

        <TextView
            android:id="@+id/descrizione"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Runner"
            android:layout_marginStart="20dp"
            android:layout_marginTop="-10dp"
            app:layout_constraintTop_toBottomOf="@id/saluto"
            android:fontFamily="@font/poppins_semibold"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="20dp"
            tools:layout_editor_absoluteX="127dp"
            tools:layout_editor_absoluteY="66dp" />

        <ImageView
            android:layout_width="150dp"
            android:layout_height="160dp"
            android:id="@+id/runningImage"
            android:src="@drawable/running_about_bounding_plains_share_19"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            app:layout_constraintStart_toEndOf="@id/nome_utente"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="175dp"
            android:id="@+id/row1"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/runningImage">

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/passiCard"
                android:layout_margin="10dp"
                android:layout_weight="1"
                app:cardElevation="20dp"
                app:cardCornerRadius="20dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/passiName"
                        android:text="Passi"
                        android:textSize="20sp"
                        android:fontFamily="@font/poppins_semibold"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="95dp"
                        android:layout_alignParentLeft="true"
                        android:layout_below="@+id/passiImage"/>

                    <TextView
                        android:id="@+id/counterPassi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/passiImage"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="95dp"
                        android:layout_marginTop="-40dp"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="1152"
                        android:textSize="20sp" />

                    <ImageView
                        android:id="@+id/passiImage"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="45dp"
                        android:background="@drawable/circle_background"
                        android:src="@drawable/icons8_boot_print_64" />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                app:cardElevation="20dp"
                app:cardCornerRadius="20dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/distanceName"
                        android:text="Distanza"
                        android:textSize="20sp"
                        android:fontFamily="@font/poppins_semibold"
                        android:layout_marginTop="10dp"
                        android:layout_centerHorizontal="true"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="70dp"
                        android:layout_below="@+id/distanceImage"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/counterDistance"
                        android:text="1.5 km"
                        android:textSize="20sp"
                        android:fontFamily="@font/poppins_semibold"
                        android:layout_marginTop="-40dp"
                        android:layout_marginLeft="90dp"
                        android:layout_alignParentLeft="true"
                        android:layout_below="@+id/distanceImage"/>

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:id="@+id/distanceImage"
                        android:layout_alignParentLeft="true"
                        android:src="@drawable/icons8_distance_64"
                        android:layout_marginTop="45dp"
                        android:layout_marginLeft="20dp"
                        android:layout_centerHorizontal="true"/>

                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="175dp"
            android:id="@+id/row2"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/row1">

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                app:cardElevation="20dp"
                app:cardCornerRadius="20dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/caloriesName"
                        android:text="Calorie bruciate"
                        android:textSize="20sp"
                        android:fontFamily="@font/poppins_semibold"
                        android:layout_marginTop="10dp"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="25dp"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/caloriesImage"/>

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:id="@+id/caloriesImage"
                        android:layout_alignParentLeft="true"
                        android:src="@drawable/download"
                        android:layout_marginTop="45dp"
                        android:layout_marginLeft="20dp"
                        android:layout_centerHorizontal="true"/>

                    <ProgressBar
                        android:id="@+id/progress_bar"
                        style="?android:attr/progressBarStyle"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:indeterminateOnly="false"
                        android:progressDrawable="@drawable/circle"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="270dp"
                        android:layout_centerHorizontal="true"
                        android:layout_alignParentLeft="true"
                        tools:progress="50" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/counterCalories"
                        android:text="50/1280 Kcal"
                        android:textSize="20sp"
                        android:fontFamily="@font/poppins_semibold"
                        android:layout_marginTop="-40dp"
                        android:layout_marginLeft="100dp"
                        android:layout_alignParentLeft="true"
                        android:layout_below="@+id/caloriesImage"/>



                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>




    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>