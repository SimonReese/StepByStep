<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/colorBackground"
    android:theme="@style/Theme.Material3.DynamicColors.DayNight">

    <TextView
        android:id="@+id/tv_sessionDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:text="Data"
        android:textSize="18sp" />


    <RelativeLayout
        android:id="@+id/innerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"




        android:layout_below="@id/tv_sessionDate"
        android:layout_marginTop="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_sumDistance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Distanza: "
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_value_sumDistance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/tv_sumDistance"
            android:layout_alignBaseline="@id/tv_sumDistance"
            android:text="0"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_speed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_sumDistance"
            android:layout_marginTop="16dp"
            android:text="VelocitÃ : "
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_value_speed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/tv_speed"
            android:layout_alignBaseline="@id/tv_speed"
            android:text="0"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_calories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_speed"
            android:layout_marginTop="16dp"
            android:text="Calories: "
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_value_calories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/tv_speed"
            android:layout_alignBaseline="@id/tv_calories"
            android:text=""
            android:textSize="15sp" />


    </RelativeLayout>

    <!-- Add StackView -->
    <Button
        android:id="@+id/btn_settings"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:text="i"

        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:drawableStart="@android:drawable/ic_input_get" />

</RelativeLayout>


